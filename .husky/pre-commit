if ! echo "$branch_name" | grep -Eq '^(main|dev|[a-z]{2}-(fix|feat|chore)-[A-Z]+-[0-9]+-[a-z0-9-]+)$'; then
  echo "âŒ Invalid branch name: $branch_name"
  echo "âœ… Allowed: main, dev, or xx-type-ABC-1234-description"
